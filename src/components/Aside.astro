---
export interface Props extends astroHTML.JSX.HTMLAttributes {
  theme?: 'blue' | 'pink' | 'green'
}

const { theme, ...attrs } = Astro.props
---

<aside class:list={[theme]} {...attrs}>
  <slot />
</aside>

<style>
  aside {
    --aside-bg: var(--color-neutral-100);
    --aside-fg: var(--color-neutral-900);
    padding: var(--gap) var(--gap-2xl);
    margin-block-end: var(--gap);
    border-radius: var(--rounded);
    background-color: var(--aside-bg);
    color: var(--aside-fg);
    box-shadow: var(--shadow);
  }
  :global([data-theme='dark']) :is(aside, aside strong, aside em) {
    --aside-bg: var(--color-neutral-200);
    --aside-fg: var(--color-neutral-900);
  }
  aside.blue {
    --aside-bg: rgb(236 254 255);
  }
  :global([data-theme='dark']) :is(aside.blue, aside.blue strong, aside.blue em) {
    --aside-bg: rgb(22 78 99);
  }
  aside.pink {
    --aside-bg: rgb(250 232 255);
  }
  :global([data-theme='dark']) :is(aside.pink, aside.pink strong, aside.pink em) {
    --aside-bg: rgb(112 26 117);
  }
  aside.green {
    --aside-bg: rgb(236 253 245);
  }
  :global([data-theme='dark']) :is(aside.green, aside.green strong, aside.green em) {
    background-color: rgb(6 78 59);
  }
</style>
