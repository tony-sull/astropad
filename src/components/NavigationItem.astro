---
import type { Entry } from '../utils/navigation.js'

export interface Props extends Entry {}

const { title, url, children = [] } = Astro.props
---

<li aria-label={title}>
  <a href={url}>{title}</a>
  {
    children.length > 0 && (
      <ol>
        {children.map((child) => (
          <Astro.self {...child} />
        ))}
      </ol>
    )
  }
</li>

<style>
  ol {
    list-style: none;
  }
  a {
    display: block;
    color: inherit;
    text-decoration: none;
    white-space: nowrap;
    line-height: 2;
  }
  a:hover,
  a:focus {
    text-decoration: underline;
  }
</style>
