---
import type { Entry } from './Navigation.astro'

export interface Props extends Entry { }

const { title, url, children = [] } = Astro.props
---

<li>
    <a href={url}>{title}</a>
    {(children.length > 0) && (
        <ol>
            {children.map((child) => (<Astro.self {...child} />))}    
        </ol>
    )}
</li>

<style>
    a {
        display: block;
        color: inherit;
        text-decoration: none;
        white-space: nowrap;
        line-height: 2;
    }

    a:hover, a:focus {
        color: var(--color-secondary);
        text-decoration: underline;
    }
</style>