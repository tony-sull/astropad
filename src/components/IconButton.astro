---
import { Icon } from 'astro-icon'

export interface Props extends astroHTML.JSX.ButtonHTMLAttributes {
  name: string
  label: string
  lg?: boolean
  href?: string
}

const { name, label, lg = false, href, ...attrs } = Astro.props
---

{
  !!href ? (
    <a href={href} {...attrs}>
      <span class="sr-only">{label}</span>
      <Icon name={name} size={lg ? 28 : 24} aria-role="image" />
    </a>
  ) : (
    <button {...attrs}>
      <span class="sr-only">{label}</span>
      <Icon name={name} size={lg ? 28 : 24} aria-role="image" />
    </button>
  )
}

<style>
  button,
  a {
    min-height: 48px;
    min-width: 48px;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    border-radius: var(--rounded);
    background: transparent;
    transition: color 100ms ease;
    color: inherit;
    cursor: pointer;
  }

  :is(a, button):hover,
  :is(a, button):focus {
    color: var(--color-secondary);
  }
</style>
