---
import IconButton from './IconButton.astro'
import site from '../data/site.js'
---

<header>
    <div>
        <IconButton name='heroicons-solid:menu' label='Toggle navigation menu' />
        <IconButton name='heroicons-solid:search' label='Search' />
    </div>

    <a href='/'>{site.name}</a>

    <div>
        {site.githubUrl && (
            <IconButton name='cib:github' label='View Astropad on GitHub' />
        )}
    </div>
</header>

<style>
    header {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
        color: var(--color-neutral-600);
    }

    a {
        text-decoration: none;
        font-size: var(--text-xl);
        color: inherit;
    }

    div {
        display: flex;
        gap: var(--gap);
    }
    
    div:last-of-type {
        justify-content: flex-end;
    }
</style>